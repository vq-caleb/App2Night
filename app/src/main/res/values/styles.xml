<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar2" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="Theme.AppCompat.White" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

</resources>
